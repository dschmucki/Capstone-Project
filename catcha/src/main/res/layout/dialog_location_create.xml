<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingEnd="@dimen/location_dialog_padding"
              android:paddingStart="@dimen/location_dialog_padding">

    <AutoCompleteTextView
        android:id="@+id/autocomplete_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/icon_margin"
        android:layout_marginLeft="@dimen/icon_margin"
        android:layout_marginRight="@dimen/icon_margin"
        android:layout_marginTop="@dimen/location_dialog_padding"
        android:hint="@string/location_start"/>

    <AutoCompleteTextView
        android:id="@+id/autocomplete_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/location_dialog_padding"
        android:layout_marginLeft="@dimen/icon_margin"
        android:layout_marginRight="@dimen/icon_margin"
        android:layout_marginTop="@dimen/icon_margin"
        android:fontFamily="sans-serif"
        android:hint="@string/location_destination"/>

</LinearLayout>